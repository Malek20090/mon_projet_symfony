{% extends 'admin/layout.html.twig' %}

{% block title %}Edit Course{% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Edit course</h1>
            <p class="mb-0">Update course content and media</p>
        </div>
        <a href="{{ path('admin_cours_index') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>

    <div class="card-custom">
        {{ form_start(form) }}
            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_row(form.titre) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.typeMedia) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.urlMedia) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.contenuTexte) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.user) }}
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Enregistrer
                </button>
                <a href="{{ path('admin_cours_index') }}" class="btn btn-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
