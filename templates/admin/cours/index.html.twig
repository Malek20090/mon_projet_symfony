{% extends 'admin/layout.html.twig' %}

{% block title %}Management of Course | Decide${% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Management of Course</h1>
            <p class="mb-0">Course catalog and educational resources</p>
        </div>
        <a href="{{ path('admin_cours_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New course
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card-custom mb-3">
        <form method="get" action="{{ path('admin_cours_index') }}" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="q" class="form-label">Rechercher</label>
                <input type="text" name="q" id="q" class="form-control" placeholder="Title, media type, content..." value="{{ search|default('') }}">
                <input type="hidden" name="sort" value="{{ sortBy|default('titre') }}">
                <input type="hidden" name="order" value="{{ order|default('ASC') }}">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>Rechercher</button>
                {% if search %}
                    <a href="{{ path('admin_cours_index') }}" class="btn btn-outline-secondary">Effacer</a>
                {% endif %}
            </div>
        </form>
    </div>

    <div class="card-custom">
        {% if cours|length > 0 %}
            <div class="table-responsive">
                <table class="table table-custom table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Media type</th>
                            <th>Media URL</th>
                            <th style="width: 160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cour in cours %}
                            <tr>
                                <td>{{ cour.titre }}</td>
                                <td><span class="badge bg-info">{{ cour.typeMedia }}</span></td>
                                <td>
                                    {% if cour.urlMedia %}
                                        <a href="{{ cour.urlMedia }}" target="_blank" class="text-decoration-none">
                                            <i class="fas fa-link"></i> Lien
                                        </a>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('admin_cours_show', {'id': cour.id}) }}" class="btn btn-sm btn-outline-primary" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_cours_edit', {'id': cour.id}) }}" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_cours_delete', {'id': cour.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this course?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cour.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center text-muted py-4">
                <i class="fas fa-book fa-3x mb-3"></i>
                <p class="mb-3">No course found.</p>
                <a href="{{ path('admin_cours_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create the first course
                </a>
            </div>
        {% endif %}
    </div>

    <div class="admin-page-footer">
        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to dashboard
        </a>
    </div>
</div>
{% endblock %}



