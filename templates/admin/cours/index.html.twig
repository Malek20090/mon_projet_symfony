{% extends 'base.html.twig' %}

{% block title %}Gestion des Cours{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Gestion des Cours</h1>
        <a href="{{ path('admin_cours_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau Cours
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('admin_cours_index') }}" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label for="q" class="form-label">Rechercher</label>
                    <input type="text" name="q" id="q" class="form-control" placeholder="Titre, type média, contenu..." value="{{ search|default('') }}">
                    <input type="hidden" name="sort" value="{{ sortBy|default('titre') }}">
                    <input type="hidden" name="order" value="{{ order|default('ASC') }}">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Rechercher</button>
                    {% if search %}
                        <a href="{{ path('admin_cours_index') }}" class="btn btn-outline-secondary">Effacer</a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-center mb-4">
        <div class="dropdown">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-sort"></i> Trier par
            </button>
            <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                <li><a class="dropdown-item" href="{{ path('admin_cours_index', { q: search, sort: 'titre', order: (sortBy == 'titre' and order == 'ASC') ? 'DESC' : 'ASC' }) }}">
                    Titre {% if sortBy == 'titre' %}<i class="fas fa-sort-{{ order == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                </a></li>
                <li><a class="dropdown-item" href="{{ path('admin_cours_index', { q: search, sort: 'typeMedia', order: (sortBy == 'typeMedia' and order == 'ASC') ? 'DESC' : 'ASC' }) }}">
                    Type Media {% if sortBy == 'typeMedia' %}<i class="fas fa-sort-{{ order == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                </a></li>
            </ul>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {% if cours|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <a href="{{ path('admin_cours_index', { q: search, sort: 'titre', order: (sortBy == 'titre' and order == 'ASC') ? 'DESC' : 'ASC' }) }}" class="text-dark text-decoration-none">
                                        Titre {% if sortBy == 'titre' %}<i class="fas fa-sort-{{ order == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ path('admin_cours_index', { q: search, sort: 'typeMedia', order: (sortBy == 'typeMedia' and order == 'ASC') ? 'DESC' : 'ASC' }) }}" class="text-dark text-decoration-none">
                                        Type Media {% if sortBy == 'typeMedia' %}<i class="fas fa-sort-{{ order == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                <th>URL Media</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for cour in cours %}
                                <tr>
                                    <td>{{ cour.titre }}</td>
                                    <td><span class="badge bg-info">{{ cour.typeMedia }}</span></td>
                                    <td>
                                        {% if cour.urlMedia %}
                                            <a href="{{ cour.urlMedia }}" target="_blank" class="text-decoration-none">
                                                <i class="fas fa-link"></i> Lien
                                            </a>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('admin_cours_show', {'id': cour.id}) }}" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_cours_edit', {'id': cour.id}) }}" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('admin_cours_delete', {'id': cour.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce cours ?');" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cour.id) }}">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Aucun cours trouvé.</p>
                    <a href="{{ path('admin_cours_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Créer le premier cours
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}
