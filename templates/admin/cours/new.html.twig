{% extends 'base.html.twig' %}

{% block title %}New Course{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-plus"></i> Create a new course</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.contenuTexte, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.contenuTexte, {'attr': {'class': 'form-control', 'rows': 10}}) }}
                            {{ form_errors(form.contenuTexte) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.typeMedia, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.typeMedia, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.typeMedia) }}
                            <small class="form-text text-muted">Ex: video, image, audio, etc.</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.urlMedia, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.urlMedia, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.urlMedia) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.user, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.user) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_cours_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}


