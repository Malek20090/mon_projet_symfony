{% extends 'base.html.twig' %}

{% block title %}Details du Course{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="fas fa-book"></i> Details du Course</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Titre</th>
                        <td><strong>{{ cour.titre }}</strong></td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>
                            <div class="border p-3 rounded bg-light">
                                {{ cour.contenuTexte|nl2br }}
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>Type Media</th>
                        <td><span class="badge bg-info">{{ cour.typeMedia }}</span></td>
                    </tr>
                    <tr>
                        <th>URL Media</th>
                        <td>
                            {% if cour.urlMedia %}
                                <a href="{{ cour.urlMedia }}" target="_blank" class="text-decoration-none">
                                    <i class="fas fa-external-link-alt"></i> {{ cour.urlMedia }}
                                </a>
                            {% else %}
                                <span class="text-muted">No media</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Related quizzes</th>
                        <td>
                            {% if cour.quizzes|length > 0 %}
                                <ul class="list-group">
                                    {% for quiz in cour.quizzes %}
                                        <li class="list-group-item">
                                            <a href="{{ path('admin_quiz_show', {'id': quiz.id}) }}" class="text-decoration-none">
                                                {{ quiz.question|slice(0, 50) }}...
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <span class="text-muted">No related quiz</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('admin_cours_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to list
                </a>
                <div>
                    <a href="{{ path('admin_cours_edit', {'id': cour.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



