{% extends 'admin/base_admin.html.twig' %}

{% block title %}Decide$ - Dashboard{% endblock %}

{% block admin_content %}
<div class="page-header">
    <h1>Dashboard Financier</h1>
    <p class="text-muted">Bienvenue sur votre espace de gestion financière</p>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card-custom stat-card">
            <div class="stat-icon green"><i class="fas fa-file-invoice-dollar"></i></div>
            <h3>0 DT</h3>
            <p>Total Revenus</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card-custom stat-card">
            <div class="stat-icon red"><i class="fas fa-shopping-cart"></i></div>
            <h3>0 DT</h3>
            <p>Total Dépenses</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card-custom stat-card">
            <div class="stat-icon blue"><i class="fas fa-piggy-bank"></i></div>
            <h3>0 DT</h3>
            <p>Epargne Totale</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card-custom">
            <h5 class="mb-4"><i class="fas fa-bolt me-2"></i>Imprévus en Base</h5>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Type</th>
                        <th>Budget</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in imprevus %}
                        <tr>
                            <td>{{ item.titre }}</td>
                            <td>
                                {% if item.type == 'POSITIF' %}
                                    <span class="badge bg-success">POSITIF</span>
                                {% else %}
                                    <span class="badge bg-danger">NEGATIF</span>
                                {% endif %}
                            </td>
                            <td>{{ item.budget }} DT</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Aucun imprévu</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

