{% extends 'admin/layout.html.twig' %}

{% block title %}Edit Quiz{% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Edit quiz</h1>
            <p class="mb-0">Update question, answers and points</p>
        </div>
        <a href="{{ path('admin_quiz_index') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>

    <div class="card-custom">
        {{ form_start(form) }}
            <div class="row g-3">
                <div class="col-12">
                    {{ form_row(form.question) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.choixReponses) }}
                    <small class="form-text text-muted">
                        Format JSON: <code>["Option A", "Option B", "Option C", "Option D"]</code>
                    </small>
                </div>
                <div class="col-md-6">
                    {{ form_row(form.reponseCorrecte) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.pointsValeur) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.cours) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.user) }}
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Enregistrer
                </button>
                <a href="{{ path('admin_quiz_index') }}" class="btn btn-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
