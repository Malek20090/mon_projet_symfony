{% extends 'admin/layout.html.twig' %}

{% block title %}Management of Quiz | Decide${% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Management of Quiz</h1>
            <p class="mb-0">Questions, points and course linkage</p>
        </div>
        <a href="{{ path('admin_quiz_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New quiz
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card-custom mb-3">
        <form method="get" action="{{ path('admin_quiz_index') }}" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="q" class="form-label">Rechercher</label>
                <input type="text" name="q" id="q" class="form-control" placeholder="Question, correct answer..." value="{{ search|default('') }}">
                <input type="hidden" name="sort" value="{{ sortBy|default('question') }}">
                <input type="hidden" name="order" value="{{ order|default('ASC') }}">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>Rechercher</button>
                {% if search %}
                    <a href="{{ path('admin_quiz_index') }}" class="btn btn-outline-secondary">Effacer</a>
                {% endif %}
            </div>
        </form>
    </div>

    <div class="card-custom">
        {% if quizzes|length > 0 %}
            <div class="table-responsive">
                <table class="table table-custom table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Choix</th>
                            <th>Correct answer</th>
                            <th>Points</th>
                            <th>Course</th>
                            <th style="width: 160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for quiz in quizzes %}
                            <tr>
                                <td>
                                    <div style="max-width: 320px;">
                                        {{ quiz.question|slice(0, 80) }}{% if quiz.question|length > 80 %}...{% endif %}
                                    </div>
                                </td>
                                <td>
                                    {% if quiz.choixReponses|length > 0 %}
                                        <span class="badge bg-secondary">{{ quiz.choixReponses|join(', ') }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-success">{{ quiz.reponseCorrecte }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ quiz.pointsValeur }} pts</span>
                                </td>
                                <td>
                                    {% if quiz.cours %}
                                        <a href="{{ path('admin_cours_show', {'id': quiz.cours.id}) }}" class="text-decoration-none">
                                            {{ quiz.cours.titre|slice(0, 30) }}{% if quiz.cours.titre|length > 30 %}...{% endif %}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">No course</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('admin_quiz_show', {'id': quiz.id}) }}" class="btn btn-sm btn-outline-primary" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_quiz_edit', {'id': quiz.id}) }}" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_quiz_delete', {'id': quiz.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this quiz?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center text-muted py-4">
                <i class="fas fa-question-circle fa-3x mb-3"></i>
                <p class="mb-3">No quiz found.</p>
                <a href="{{ path('admin_quiz_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create the first quiz
                </a>
            </div>
        {% endif %}
    </div>

    <div class="admin-page-footer">
        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to dashboard
        </a>
    </div>
</div>
{% endblock %}




