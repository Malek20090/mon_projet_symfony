{% extends 'base.html.twig' %}

{% block title %}New Quiz{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-plus"></i> Create a new quiz</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.question, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.question, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.question) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.choixReponses, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.choixReponses, {'attr': {'class': 'form-control font-monospace'}}) }}
                            {{ form_errors(form.choixReponses) }}
                            <small class="form-text text-muted">
                                Format JSON: <code>["Option A", "Option B", "Option C", "Option D"]</code>
                            </small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.reponseCorrecte, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.reponseCorrecte, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.reponseCorrecte) }}
                            <small class="form-text text-muted">Ex: A, B, C or D (must match one option)</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.pointsValeur, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.pointsValeur, {'attr': {'class': 'form-control', 'min': 1}}) }}
                            {{ form_errors(form.pointsValeur) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.cours, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.cours, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.cours) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.user, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.user) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_quiz_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



