{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{% block title %}Decide${% endblock %}</title>

  {# ✅ Safe favicon (inline svg encoded) #}
  <link rel="icon"
        href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'%3E%3Ctext y='1.2em' font-size='96'%3E%F0%9F%92%B0%3C/text%3E%3C/svg%3E">

  {# Fonts / Icons #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer">

  {# ✅ Bootstrap CSS (keep ONE bootstrap only to avoid conflicts) #}
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        crossorigin="anonymous">

  {# ✅ Your template/global css (only if you really use it) #}
  <link rel="stylesheet" href="{{ asset('css/all.min.css') }}">

  {# Optional template styles (keep if they exist) #}
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">

  {# ❌ Avoid loading a second bootstrap file (often breaks modals/buttons)
     If you REALLY need your local bootstrap, comment CDN above instead.
  #}
  {# <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"> #}

  {% block stylesheets %}{% endblock %}
</head>

<body class="{% block body_class %}{% endblock %}">

  {% block body %}{% endblock %}

  {# ===========================
     JS (always loaded)
     =========================== #}

  {# ✅ Symfony importmap (keep) #}
  {% block javascripts %}
    {{ importmap('app') }}
  {% endblock %}

  {# ✅ Bootstrap JS bundle (MUST be outside blocks so pages can't accidentally remove it) #}
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
