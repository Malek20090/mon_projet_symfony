{# Shared base for Contact, Service, About, Savings — same header (glass-nav) and footer (footer-decides) #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Decide${% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="{{ asset('css/decides-savings.css') }}">
    <style>
        body { padding-top: 76px; }
        /* Header: light by default (same as Savings) */
        .glass-nav { background: rgba(255,255,255,.96) !important; backdrop-filter: blur(12px); border-bottom: 1px solid rgba(0,0,0,.08) !important; }
        .glass-nav .navbar-brand { color: #0d6efd !important; }
        .glass-nav .nav-link { color: #212529 !important; }
        .glass-nav .nav-link.text-info.fw-bold,
        .glass-nav .nav-link:hover { color: #0d6efd !important; }
        /* Dark mode: header */
        body.theme-dark .glass-nav { background: rgba(15, 26, 43, 0.98) !important; border-bottom-color: rgba(255,255,255,.1) !important; }
        body.theme-dark .glass-nav .navbar-brand,
        body.theme-dark .glass-nav .nav-link { color: rgba(255,255,255,.9) !important; }
        body.theme-dark .glass-nav .nav-link.text-info.fw-bold,
        body.theme-dark .glass-nav .nav-link:hover { color: #00bfe5 !important; }
        body.theme-dark .glass-nav .btn-info { background: #00bfe5; color: #081a3a; border: none; }
        body.theme-dark .glass-nav .btn-info:hover { background: #00a3c4; color: #081a3a; }
        /* Dark mode toggle button */
        #headerDarkModeBtn { background: transparent; border: 1px solid rgba(0,0,0,.15); color: #495057; width: 40px; height: 40px; border-radius: 50%; cursor: pointer; display: inline-flex; align-items: center; justify-content: center; margin-right: 12px; transition: all 0.2s; }
        #headerDarkModeBtn:hover { background: rgba(0,0,0,.06); color: #212529; }
        body.theme-dark #headerDarkModeBtn { border-color: rgba(255,255,255,.35); color: rgba(255,255,255,.9); }
        body.theme-dark #headerDarkModeBtn:hover { background: rgba(255,255,255,.15); color: #fff; }
        body:not(.theme-dark) #headerDarkModeBtn .fa-sun { display: none; }
        body:not(.theme-dark) #headerDarkModeBtn .fa-moon { display: inline-block; }
        body.theme-dark #headerDarkModeBtn .fa-moon { display: none; }
        body.theme-dark #headerDarkModeBtn .fa-sun { display: inline-block; }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body class="{% block body_class %}{% endblock %}" id="basePagesBody">

<!-- ================= NAVBAR (same as Contact, Service, About) ================= -->
<nav class="navbar navbar-expand-lg fixed-top glass-nav">
    <div class="container">
        <a class="navbar-brand fw-bold text-white" href="{{ path('app_home') }}">
            <i class="fas fa-wallet text-info me-2"></i> Decide$
        </a>

        <ul class="navbar-nav mx-auto gap-4">
            <li class="nav-item">
                <a class="nav-link text-white {{ app.request.attributes.get('_route') == 'app_home' ? 'text-info fw-bold' : '' }}" href="{{ path('app_home') }}">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white {{ app.request.attributes.get('_route') == 'app_about' ? 'text-info fw-bold' : '' }}" href="{{ path('app_about') }}">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white {{ app.request.attributes.get('_route') == 'app_service' ? 'text-info fw-bold' : '' }}" href="{{ path('app_service') }}">Service</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white {{ (app.request.attributes.get('_route') ?? '') starts with 'app_salary_expense' ? 'text-info fw-bold' : '' }}" href="{{ path('app_salary_expense_index') }}">Revenu & Dépenses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white {{ app.request.attributes.get('_route') starts with 'app_savings' ? 'text-info fw-bold' : '' }}" href="{{ path('app_savings') }}">Savings</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white {{ app.request.attributes.get('_route') == 'app_alea' ? 'text-info fw-bold' : '' }}" href="{{ path('app_alea') }}">Imprevus & Cas réels</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white {{ app.request.attributes.get('_route') == 'app_contact' ? 'text-info fw-bold' : '' }}" href="{{ path('app_contact') }}">Contact</a>
            </li>
        </ul>

        <div class="d-flex align-items-center">
            <button type="button" id="headerDarkModeBtn" class="flex-shrink-0" title="Dark mode" aria-label="Toggle dark mode">
                <i class="fas fa-moon"></i>
                <i class="fas fa-sun"></i>
            </button>
            <a href="{{ path('app_salary_expense_index') }}" class="btn btn-info rounded-pill px-4">To Start</a>
        </div>
    </div>
</nav>

{% block body %}{% endblock %}

<!-- ================= FOOTER (same as Contact, Service, About) ================= -->
<footer class="footer-decides">
    <div class="container">
        <div class="row gy-4">
            <div class="col-md-4 text-center text-md-start">
                <h4 class="footer-brand">
                    <i class="fas fa-wallet text-info me-2"></i> Decide$
                </h4>
                <p class="footer-text">
                    Decide$ helps you manage your salary, control expenses,
                    and build a secure financial future with confidence.
                </p>
            </div>
            <div class="col-md-4 text-center">
                <h6 class="footer-title">Quick Links</h6>
                <ul class="footer-links">
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li><a href="{{ path('app_about') }}">About</a></li>
                    <li><a href="{{ path('app_service') }}">Services</a></li>
                    <li><a href="{{ path('app_salary_expense_index') }}">Revenu & Dépenses</a></li>
                    <li><a href="{{ path('app_savings') }}">Savings</a></li>
                    <li><a href="{{ path('app_alea') }}">Imprevus & Cas réels</a></li>
                    <li><a href="{{ path('app_contact') }}">Contact</a></li>
                </ul>
            </div>
            <div class="col-md-4 text-center text-md-end">
                <h6 class="footer-title">Connect with us</h6>
                <div class="footer-social">
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    <a href="#"><i class="fab fa-github"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fas fa-envelope"></i></a>
                </div>
            </div>
        </div>
        <hr class="footer-divider">
        <div class="footer-bottom text-center">
            © {{ "now"|date("Y") }} Decide$ — All rights reserved
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
<script>if (typeof WOW !== 'undefined') { new WOW().init(); }</script>
<script>
(function(){
  var KEY = 'decides_theme_dark';
  var body = document.getElementById('basePagesBody') || document.body;
  var btn = document.getElementById('headerDarkModeBtn');
  function apply(v) { if (v === '1') body.classList.add('theme-dark'); else body.classList.remove('theme-dark'); }
  function toggle() { var v = body.classList.toggle('theme-dark') ? '1' : '0'; try { localStorage.setItem(KEY, v); } catch(e) {} }
  try { apply(localStorage.getItem(KEY)); } catch(e) {}
  if (btn) btn.addEventListener('click', toggle);
})();
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
