{% extends 'admin/layout.html.twig' %}

{% block title %}Dépenses | Decide${% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Dépenses</h1>
            <p class="mb-0">Gestion des dépenses par catégorie</p>
        </div>
        <a href="{{ path('app_expense_new') }}" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Nouvelle dépense</a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card-custom">
        <div class="table-responsive">
            <table class="table table-custom table-hover mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Montant</th>
                        <th>Catégorie</th>
                        <th>Date</th>
                        <th>Revenu associé</th>
                        <th style="width: 140px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for expense in expenses %}
                        <tr>
                            <td>{{ expense.id }}</td>
                            <td class="text-primary fw-bold">{{ expense.amount|number_format(2, '.', ' ') }} TND</td>
                            <td>{{ expense.category }}</td>
                            <td>{{ expense.expenseDate ? expense.expenseDate|date('d/m/Y') : '' }}</td>
                            <td>
                                {% if expense.revenue %}
                                    <a href="{{ path('app_revenue_show', { id: expense.revenue.id }) }}">#{{ expense.revenue.id }}</a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_expense_show', { id: expense.id }) }}" class="btn btn-sm btn-outline-primary" title="Voir"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('app_expense_edit', { id: expense.id }) }}" class="btn btn-sm btn-outline-primary" title="Modifier"><i class="fas fa-edit"></i></a>
                                <form method="post" action="{{ path('app_expense_delete', { id: expense.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer cette dépense ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expense.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" class="text-center text-muted py-4">Aucune dépense.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="admin-page-footer">
        <a href="{{ path('admin_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Retour au dashboard</a>
    </div>
</div>
{% endblock %}
