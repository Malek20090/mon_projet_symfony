{% extends 'base.html.twig' %}

{% block title %}Dépenses | Decide${% endblock %}

{% block body %}
<!-- Header -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5">
        <h1 class="display-4 text-white wow fadeInDown">Dépenses</h1>
        <p class="text-white-50 wow fadeInUp">Gestion des dépenses par catégorie</p>
    </div>
</div>

<div class="container-fluid service bg-light py-5">
    <div class="container py-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4 wow fadeInUp">
            <h4 class="text-primary mb-0"><i class="fas fa-credit-card me-2"></i>Liste des dépenses</h4>
            <a href="{{ path('app_expense_new') }}" class="btn btn-primary rounded-pill"><i class="fas fa-plus-circle me-2"></i>Nouvelle dépense</a>
        </div>

        <div class="service-item rounded p-4 wow fadeInUp">
            <div class="table-responsive">
                <table class="table table-bordered align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Montant</th>
                            <th>Catégorie</th>
                            <th>Date</th>
                            <th>Revenu associé</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for expense in expenses %}
                            <tr>
                                <td>{{ expense.id }}</td>
                                <td class="text-primary fw-bold">{{ expense.amount|number_format(2, '.', ' ') }} TND</td>
                                <td>{{ expense.category }}</td>
                                <td>{{ expense.expenseDate ? expense.expenseDate|date('d/m/Y') : '' }}</td>
                                <td>
                                    {% if expense.revenue %}
                                        <a href="{{ path('app_revenue_show', { id: expense.revenue.id }) }}">#{{ expense.revenue.id }}</a>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_expense_show', { id: expense.id }) }}" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('app_expense_edit', { id: expense.id }) }}" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                                    <form method="post" action="{{ path('app_expense_delete', { id: expense.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer cette dépense ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expense.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="6" class="text-center text-muted">Aucune dépense.</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_salary_expense_index') }}" class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left me-2"></i>Retour au module</a>
        </div>
    </div>
</div>
{% endblock %}
