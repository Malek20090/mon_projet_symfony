{% extends 'admin/layout.html.twig' %}

{% block title %}Goals financiers | Decide${% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Goals financiers</h1>
            <p class="mb-0">Suivi des montants cibles et de la progression</p>
        </div>
        <a href="{{ path('app_financial_goal_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouvel objectif
        </a>
    </div>

    <div class="card-custom">
        {% if financial_goals|length > 0 %}
            <div class="table-responsive">
                <table class="table table-custom table-hover mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Montant cible</th>
                            <th>Montant actuel</th>
                            <th>Date limite</th>
                            <th>Priority</th>
                            <th style="width: 160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for financial_goal in financial_goals %}
                            <tr>
                                <td>{{ financial_goal.id }}</td>
                                <td>{{ financial_goal.nom }}</td>
                                <td class="text-primary fw-bold">{{ financial_goal.montantCible }} TND</td>
                                <td>{{ financial_goal.montantActuel }} TND</td>
                                <td>{{ financial_goal.dateLimite ? financial_goal.dateLimite|date('d/m/Y') : '-' }}</td>
                                <td>{{ financial_goal.priorite }}</td>
                                <td>
                                    <a href="{{ path('app_financial_goal_show', {'id': financial_goal.id}) }}" class="btn btn-sm btn-outline-primary" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_financial_goal_edit', {'id': financial_goal.id}) }}" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center text-muted py-4">
                <i class="fas fa-bullseye fa-3x mb-3"></i>
                <p class="mb-2">No goals defined.</p>
                <a href="{{ path('app_financial_goal_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create votre premier objectif
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

