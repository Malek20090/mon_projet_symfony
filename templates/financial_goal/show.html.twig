{% extends 'admin/layout.html.twig' %}

{% block title %}Detail objectif | Decide${% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Goal: {{ financial_goal.nom }}</h1>
            <p class="mb-0">Detailed view of your financial goal</p>
        </div>
        <div>
            <a href="{{ path('app_financial_goal_edit', {'id': financial_goal.id}) }}" class="btn btn-primary me-2">
                <i class="fas fa-edit me-1"></i>Edit
            </a>
            <a href="{{ path('app_financial_goal_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to list
            </a>
        </div>
    </div>

    <div class="card-custom mb-3">
        <table class="table mb-0">
            <tbody>
                <tr>
                    <th style="width: 220px;">ID</th>
                    <td>{{ financial_goal.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ financial_goal.nom }}</td>
                </tr>
                <tr>
                    <th>Montant cible</th>
                    <td class="text-primary fw-bold">{{ financial_goal.montantCible }} TND</td>
                </tr>
                <tr>
                    <th>Montant actuel</th>
                    <td>{{ financial_goal.montantActuel }} TND</td>
                </tr>
                <tr>
                    <th>Date limite</th>
                    <td>{{ financial_goal.dateLimite ? financial_goal.dateLimite|date('d/m/Y') : '-' }}</td>
                </tr>
                <tr>
                    <th>Priority</th>
                    <td>{{ financial_goal.priorite }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="card-custom">
        {{ include('financial_goal/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

