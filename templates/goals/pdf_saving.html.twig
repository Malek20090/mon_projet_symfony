<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Saving Accounts PDF</title>
  <style>
    body { font-family: DejaVu Sans, Arial, sans-serif; font-size: 12px; color:#111; }
    .top { margin-bottom: 14px; }
    h1 { margin:0; font-size: 18px; }
    .meta { color:#555; margin-top: 4px; font-size: 11px; }
    table { width:100%; border-collapse: collapse; margin-top: 10px; }
    th, td { border:1px solid #ddd; padding:8px; vertical-align: top; }
    th { background:#f3f6f9; text-align:left; font-weight: 800; }
    .money { font-weight: 800; }
  </style>
</head>
<body>

  <div class="top">
    <h1>Saving Accounts Report</h1>
    <div class="meta">
      Generated at: {{ generatedAt|date('Y-m-d H:i') }}
      &nbsp;|&nbsp; Rows: {{ rows|length }}
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th style="width:50px;">#</th>
        <th>User</th>
        <th style="width:120px;">Balance</th>
        <th style="width:110px;">Interest rate</th>
        <th style="width:110px;">Created</th>
      </tr>
    </thead>
    <tbody>
      {% for r in rows %}
        <tr>
          <td>{{ r.id|default('—') }}</td>
          <td><b>{{ r.u_label|default('—') }}</b></td>
          <td class="money">{{ r.sold|default(0) }} DT</td>
          <td>{{ r.taux_interet|default(0) }}%</td>
          <td>{{ r.date_creation|default('—') }}</td>
        </tr>
      {% else %}
        <tr><td colspan="5">No data.</td></tr>
      {% endfor %}
    </tbody>
  </table>

</body>
</html>
