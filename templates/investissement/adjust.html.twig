{% extends 'base.html.twig' %}

{% block title %}Ajuster investissement{% endblock %}

{% block body %}
<h1>Ajuster l’investissement</h1>
{% for message in app.flashes('error') %}
    <p style="color:red; font-weight:bold;">
        {{ message }}
    </p>
{% endfor %}


<p>
    <strong>Crypto :</strong> {{ investissement.crypto.name }}<br>
    <strong>Montant actuel :</strong> {{ investissement.amountInvested }} USD
</p>

<form method="post">
    <label>Montant à ajouter ou retirer (USD)</label><br>
    <input type="number" name="amount" step="0.01" required>

    <br><br>

    <button type="submit">Valider</button>
</form>

<a href="{{ path('crypto_index') }}">⬅ Retour</a>
{% endblock %}
