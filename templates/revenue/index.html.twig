{% extends 'base.html.twig' %}

{% block title %}Revenus | Decide${% endblock %}

{% block body %}
<!-- Header -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5">
        <h1 class="display-4 text-white wow fadeInDown">Revenus</h1>
        <p class="text-white-50 wow fadeInUp">Gestion des revenus et salaires</p>
    </div>
</div>

<div class="container-fluid service bg-light py-5">
    <div class="container py-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4 wow fadeInUp">
            <h4 class="text-primary mb-0"><i class="fas fa-wallet me-2"></i>Liste des revenus</h4>
            <a href="{{ path('app_revenue_new') }}" class="btn btn-primary rounded-pill"><i class="fas fa-plus-circle me-2"></i>Nouveau revenu</a>
        </div>

        <div class="service-item rounded p-4 wow fadeInUp">
            <div class="table-responsive">
                <table class="table table-bordered align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Montant</th>
                            <th>Type</th>
                            <th>Date r√©ception</th>
                            <th>Utilisateur</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for revenue in revenues %}
                            <tr>
                                <td>{{ revenue.id }}</td>
                                <td class="text-primary fw-bold">{{ revenue.amount|number_format(2, '.', ' ') }} TND</td>
                                <td>{{ revenue.type }}</td>
                                <td>{{ revenue.receivedAt ? revenue.receivedAt|date('d/m/Y') : '' }}</td>
                                <td>{{ revenue.user ? (revenue.user.nom ?? revenue.user.email ?? 'User #' ~ revenue.user.id) : '-' }}</td>
                                <td>
                                    <a href="{{ path('app_revenue_show', { id: revenue.id }) }}" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('app_revenue_edit', { id: revenue.id }) }}" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                                    <form method="post" action="{{ path('app_revenue_delete', { id: revenue.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer ce revenu ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ revenue.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="6" class="text-center text-muted">Aucun revenu.</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_salary_expense_index') }}" class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left me-2"></i>Retour au module</a>
        </div>
    </div>
</div>
{% endblock %}
