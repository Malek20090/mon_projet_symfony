{% extends 'base.html.twig' %}

{% block title %}Nouveau revenu | Decide${% endblock %}

{% block body %}
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5">
        <h1 class="display-4 text-white wow fadeInDown">Nouveau revenu</h1>
        <p class="text-white-50 wow fadeInUp">Ajouter un revenu ou un salaire</p>
    </div>
</div>

<div class="container-fluid service bg-light py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="service-item rounded p-4 wow fadeInUp">
                    <h4 class="mb-4"><i class="fas fa-wallet text-primary me-2"></i>Ajouter un revenu</h4>
                    {{ include('revenue/_form.html.twig', { button_label: 'Créer' }) }}
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_revenue_index') }}" class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left me-2"></i>Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
