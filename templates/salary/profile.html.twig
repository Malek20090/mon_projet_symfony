<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile | Decide$</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #eef2f8;
            color: #0f172a;
        }
        .profile-wrap {
            max-width: 1180px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        .card-clean {
            background: #fff;
            border: 1px solid #e5eaf1;
            border-radius: 16px;
            box-shadow: 0 8px 22px rgba(15, 23, 42, 0.07);
        }
        .profile-head {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }
        .profile-user {
            display: flex;
            gap: 0.9rem;
            align-items: center;
        }
        .profile-avatar {
            width: 74px;
            height: 74px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #dbe5ff;
            box-shadow: 0 6px 16px rgba(31, 69, 173, 0.2);
        }
        .tx-badge {
            padding: 0.25rem 0.65rem;
            border-radius: 999px;
            font-size: 0.78rem;
            font-weight: 700;
        }
        .tx-saving { background: #dcfce7; color: #166534; }
        .tx-expense { background: #fee2e2; color: #b91c1c; }
        .tx-invest { background: #dbeafe; color: #1d4ed8; }
    </style>
</head>
<body>
<div class="profile-wrap">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">My Salary Profile</h1>
        <a href="{{ path('salary_dashboard') }}" class="btn btn-outline-primary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to dashboard
        </a>
    </div>

    <div class="card-clean p-4 mb-4">
        <div class="profile-head">
            <div class="profile-user">
                <img src="{{ asset(user.image ? 'uploads/users/' ~ user.image : 'uploads/users/chat1.png') }}" alt="Profile image" class="profile-avatar">
                <div>
                    <h2 class="h5 mb-1">{{ user.nom ?: 'User' }}</h2>
                    <div class="text-muted">{{ user.email }}</div>
                </div>
            </div>
            <div class="text-muted">
                <i class="fas fa-wallet me-2"></i>Balance:
                <strong class="text-dark">{{ user.soldeTotal|number_format(2, '.', ' ') }} TND</strong>
            </div>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} mb-3">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
            <div class="col-md-6">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.plainPassword) }}
                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.plainPassword) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.image) }}
            </div>
            <div class="col-12">
                <button class="btn btn-primary rounded-pill px-4" type="submit">
                    <i class="fas fa-floppy-disk me-2"></i>Save profile
                </button>
            </div>
        {{ form_end(form) }}
    </div>

    <div class="card-clean p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="h5 mb-0">My Transactions</h3>
            <span class="text-muted">Total: {{ transactions|length }}</span>
        </div>

        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Source</th>
                    </tr>
                </thead>
                <tbody>
                {% for tx in transactions %}
                    <tr>
                        <td>{{ tx.id }}</td>
                        <td>
                            {% set typeClass = tx.type == 'SAVING' ? 'tx-saving' : (tx.type == 'EXPENSE' ? 'tx-expense' : 'tx-invest') %}
                            <span class="tx-badge {{ typeClass }}">{{ tx.type }}</span>
                        </td>
                        <td class="fw-semibold">{{ tx.montant|number_format(2, '.', ' ') }} TND</td>
                        <td>{{ tx.date ? tx.date|date('d/m/Y') : '-' }}</td>
                        <td>{{ tx.description ?: '-' }}</td>
                        <td>{{ tx.moduleSource ?: '-' }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">No transactions available.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>

