<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Savings Transactions</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 24px; }
    h1 { margin: 0 0 6px; }
    .meta { color:#555; margin-bottom: 16px; }
    table { width:100%; border-collapse: collapse; margin-top: 14px; }
    th, td { border:1px solid #ddd; padding: 10px; font-size: 14px; }
    th { background:#f3f6f9; text-align:left; }
    .amount { font-weight:700; }
    @media print { button { display:none; } }
  </style>
</head>
<body>

<button onclick="window.print()">Print / Save as PDF</button>

<h1>Savings Transactions</h1>
<div class="meta">
  Generated: {{ generatedAt|date('Y-m-d H:i') }} |
  Range: {{ range }} |
  Search: {{ q ? q : '---' }} |
  Sort: {{ sort }}
</div>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Type</th>
      <th>Amount</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {% if rows is empty %}
      <tr><td colspan="5">No transactions.</td></tr>
    {% else %}
      {% for r in rows %}
        <tr>
          <td>{{ r.id }}</td>
          <td>{{ r.date }}</td>
          <td>{{ r.type }}</td>
          <td class="amount">{{ r.montant }} TND</td>
          <td>{{ r.description }}</td>
        </tr>
      {% endfor %}
    {% endif %}
  </tbody>
</table>

</body>
</html>
