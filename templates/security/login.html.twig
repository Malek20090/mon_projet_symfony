<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign In | FinanceLogo</title>

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <link rel="stylesheet" href="{{ asset('css/dark-mode.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<script>
window.addEventListener('load', () => {
    document.querySelectorAll('.animate-logo').forEach(el => {
        el.classList.remove('animate-logo');
        void el.offsetWidth;
        el.classList.add('animate-logo');
    });
});
</script>
<body>

<div class="login-page" style="background-image: url('{{ asset('img/a.jpg') }}');">
    <div class="overlay"></div>

    <div class="login-container">

        <div class="login-left">
            <div class="brand">
                <img src="{{ asset('img/chat1.png') }}" alt="DECIDE$ Logo" class="brand-logo animate-logo">
            </div>

            <h2>
                Access your financial workspace<br>
                <span>securely</span>
            </h2>

            <div class="accent-line"></div>

            <p class="description">
                Manage assets, analyze performance, and secure your future with our modern platform.
            </p>
        </div>

        <div class="login-right">
            <div class="login-card">

                <h2>Sign In</h2>
                <p class="subtitle">Welcome to your secure space</p>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success mb-3" role="alert">{{ message }}</div>
                {% endfor %}

                {% if error %}
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_login') }}">
                    <div class="input-group">
                        <label>Email address</label>
                        <div class="input-wrapper">
                            <i class="fas fa-envelope"></i>
                            <input
                                type="email"
                                name="_username"
                                value="{{ last_username }}"
                                placeholder="you@example.com"
                                required
                                maxlength="180"
                                autofocus
                                autocomplete="email"
                            >
                        </div>
                    </div>

                    <div class="input-group">
                        <label>Password</label>
                        <div class="input-wrapper">
                            <i class="fas fa-lock"></i>
                            <input
                                type="password"
                                name="_password"
                                placeholder="••••••••"
                                required
                                minlength="8"
                                maxlength="255"
                                autocomplete="current-password"
                            >
                        </div>
                    </div>

                    <div class="options">
                        <label class="checkbox-container">
                            <input type="checkbox" name="_remember_me">
                            <span class="checkmark"></span>
                            Remember me
                        </label>

                        <a href="#" class="forgot-link">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn-login">
                        Sign In
                    </button>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </form>

                <div class="divider">
                    <span>or</span>
                </div>

                <div class="footer-links">
                    New to the platform?
                    <a href="{{ path('app_register') }}">Create an account</a>
                </div>

                <div class="ssl-info">
                    <i class="fas fa-shield-alt"></i>
                    Secure sign-in SSL 256-bit
                </div>

            </div>
        </div>

    </div>
</div>

<script src="{{ asset('js/theme-toggle.js') }}"></script>
</body>
</html>
