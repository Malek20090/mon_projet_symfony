{% extends 'base_pages.html.twig' %}

{% block title %}Course catalog | Decide${% endblock %}

{% block body_class %}alea-page learning-page{% endblock %}

{% block body %}
    <!-- Hero (same style as Alea / Services) -->
    <section class="hero">
        <div class="container text-center wrap">
            <div class="learning-hero-tag">
                <i class="fas fa-graduation-cap"></i> Espace d'apprentissage
            </div>
            <h1>Course catalog</h1>
            <p>Explore our financial training courses and boost your budgeting skills.</p>
            <div class="breadcrumbs">
                <a href="{{ path('app_home') }}">Home</a> /
                <a href="{{ path('app_service') }}">Modules</a> /
                <span class="active">Course</span>
            </div>
        </div>
    </section>

    <section class="container py-5">
        <div class="row justify-content-center mb-4">
            <div class="col-md-6">
                <div class="d-flex justify-content-center learning-filter">
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-sort"></i> Trier par
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                            <li><a class="dropdown-item" href="{{ path('student_cours_index', { sort: 'titre', order: (sortBy == 'titre' and order == 'ASC') ? 'DESC' : 'ASC' }) }}">
                                Titre {% if sortBy == 'titre' %}<i class="fas fa-sort-{{ order == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                            </a></li>
                            <li><a class="dropdown-item" href="{{ path('student_cours_index', { sort: 'typeMedia', order: (sortBy == 'typeMedia' and order == 'ASC') ? 'DESC' : 'ASC' }) }}">
                                Type Media {% if sortBy == 'typeMedia' %}<i class="fas fa-sort-{{ order == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {% if cours|length > 0 %}
            <div class="row g-4">
                {% for cour in cours %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 learning-card">
                            {% if cour.urlMedia %}
                                <div class="card-img-top" style="height: 200px; overflow: hidden; background: linear-gradient(135deg, #1e3fa3, #00cfff);">
                                    {% if cour.typeMedia == 'video' %}
                                        <div class="d-flex align-items-center justify-content-center h-100 text-white">
                                            <i class="fas fa-video fa-3x"></i>
                                        </div>
                                    {% elseif cour.typeMedia == 'image' %}
                                        <img src="{{ cour.urlMedia }}" class="img-fluid w-100 h-100" style="object-fit: cover;" alt="{{ cour.titre }}">
                                    {% else %}
                                        <div class="d-flex align-items-center justify-content-center h-100 text-white">
                                            <i class="fas fa-file-alt fa-3x"></i>
                                        </div>
                                    {% endif %}
                                </div>
                            {% else %}
                                <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #1e3fa3, #00cfff);">
                                    <i class="fas fa-book fa-3x text-white"></i>
                                </div>
                            {% endif %}

                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title text-primary fw-bold mb-0">{{ cour.titre }}</h5>
                                    <span class="learning-pill">
                                        <i class="fas fa-graduation-cap me-1"></i> Module {{ loop.index }}
                                    </span>
                                </div>

                                <p class="card-text text-muted flex-grow-1 learning-description">
                                    {{ cour.contenuTexte|slice(0, 120) }}{% if cour.contenuTexte|length > 120 %}...{% endif %}
                                </p>

                                <div class="course-meta mb-3">
                                    <span class="meta-item">
                                        <i class="fas fa-{{ cour.typeMedia == 'video' ? 'video' : (cour.typeMedia == 'image' ? 'image' : 'file-alt') }} me-1 text-primary"></i>
                                        {{ cour.typeMedia == 'video' ? 'Interactive video' : (cour.typeMedia == 'image' ? 'Visual support' : 'Text content') }}
                                    </span>

                                    {% if cour.quizzes|length > 0 %}
                                        <span class="meta-item">
                                            <i class="fas fa-question-circle me-1 text-success"></i>
                                            {{ cour.quizzes|length }} related quiz{{ cour.quizzes|length > 1 ? 'zes' : '' }}
                                        </span>
                                    {% else %}
                                        <span class="meta-item text-muted">
                                            <i class="fas fa-hourglass-half me-1"></i>
                                            Guided reading
                                        </span>
                                    {% endif %}
                                </div>

                                <div class="mt-auto">
                                    <a href="{{ path('student_cours_show', {'id': cour.id}) }}" class="btn btn-primary w-100 rounded-pill fw-bold learning-cta">
                                        <i class="fas fa-play-circle me-2"></i> Start course
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-books fa-4x text-muted mb-3"></i>
                <h3 class="text-muted mb-3">No coursee available for now</h3>
                <p class="text-muted mb-4">Courses will be available soon. Stay tuned!</p>
                <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg rounded-pill px-4">
                    <i class="fas fa-home me-2"></i> Back to home
                </a>
            </div>
        {% endif %}
    </section>
    <style>
        .learning-card {
            border-radius: 18px;
            overflow: hidden;
            transition: transform 0.35s ease, box-shadow 0.35s ease;
        }

        .learning-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(11, 28, 63, 0.18);
        }

        .learning-description {
            font-size: 0.95rem;
        }

        .course-meta {
            font-size: 0.85rem;
            color: #6b7c8a;
            display: flex;
            flex-wrap: wrap;
            gap: 0.35rem 0.75rem;
        }

        .course-meta .meta-item {
            background: #f3f7fb;
            border-radius: 999px;
            padding: 0.25rem 0.75rem;
            display: inline-flex;
            align-items: center;
        }

        .learning-pill {
            font-size: 0.75rem;
            font-weight: 600;
            background: linear-gradient(135deg, #00c6ef, #0d6efd);
            color: #fff;
            padding: 0.2rem 0.7rem;
            border-radius: 999px;
            white-space: nowrap;
        }

        .learning-cta {
            box-shadow: 0 10px 25px rgba(13, 110, 253, 0.35);
        }

        .learning-cta:hover {
            box-shadow: 0 16px 40px rgba(13, 110, 253, 0.45);
        }

        .learning-filter .btn-outline-primary {
            border-radius: 999px;
        }
    </style>
{% endblock %}




