{% extends 'base_pages.html.twig' %}

{% block title %}Quiz du Course: {{ cour.titre }} | Decide${% endblock %}

{% block body_class %}alea-page learning-page{% endblock %}

{% block body %}
    <!-- Hero (same style as Alea / Services) -->
    <section class="hero">
        <div class="container text-center wrap">
            <div class="learning-hero-tag">
                <i class="fas fa-brain"></i> Self-assessment
            </div>
            <h1>Course quiz</h1>
            <p>Answer quizzes to validate your knowledge for this course.</p>
            <div class="breadcrumbs">
                <a href="{{ path('app_home') }}">Home</a> /
                <a href="{{ path('app_service') }}">Modules</a> /
                <a href="{{ path('student_cours_index') }}">Course</a> /
                <a href="{{ path('student_cours_show', {'id': cour.id}) }}">{{ cour.titre }}</a> /
                <span class="active">Quiz</span>
            </div>
        </div>
    </section>

    <section class="container py-5">
        <div class="card shadow mb-4 quiz-course-card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">
                        <i class="fas fa-book"></i> {{ cour.titre }}
                    </h3>
                    <small class="text-white-50">Select a quiz to assess your skills.</small>
                </div>
                <span class="badge bg-light text-primary ms-3">
                    <i class="fas fa-question-circle me-1"></i> {{ quizzes|length }} quiz
                </span>
            </div>
            <div class="card-body">
                {% if quizzes|length > 0 %}
                    <div class="row g-3">
                        {% for quiz in quizzes %}
                            {% set difficulty = 'Facile' %}
                            {% set difficultyClass = 'quiz-level-easy' %}
                            {% if quiz.pointsValeur >= 5 and quiz.pointsValeur < 10 %}
                                {% set difficulty = 'Intermediate' %}
                                {% set difficultyClass = 'quiz-level-medium' %}
                            {% elseif quiz.pointsValeur >= 10 %}
                                {% set difficulty = 'Advanced' %}
                                {% set difficultyClass = 'quiz-level-hard' %}
                            {% endif %}

                            <div class="col-md-6">
                                <div class="quiz-list-item">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="mb-0">{{ quiz.question }}</h5>
                                        <span class="quiz-difficulty-badge {{ difficultyClass }}">
                                            <i class="fas fa-signal me-1"></i>{{ difficulty }}
                                        </span>
                                    </div>
                                    <div class="mb-3 quiz-meta">
                                        <span>
                                            <i class="fas fa-star me-1 text-warning"></i>{{ quiz.pointsValeur }} points
                                        </span>
                                        <span>
                                            <i class="fas fa-list me-1 text-info"></i>{{ quiz.choixReponses|length }} choix
                                        </span>
                                    </div>
                                    <a href="{{ path('student_quiz_pass', {'id': quiz.id}) }}" class="btn btn-success w-100 rounded-pill">
                                        <i class="fas fa-play me-1"></i> Passer ce quiz
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No quiz available for this course.</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="text-center">
            <a href="{{ path('student_cours_show', {'id': cour.id}) }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to course
            </a>
        </div>
    </section>
    <style>
        .quiz-course-card {
            border-radius: 18px;
            overflow: hidden;
        }

        .quiz-list-item {
            border-radius: 14px;
            border: 1px solid #e3f2fd;
            padding: 1.1rem 1.25rem;
            background: #f9fcff;
            transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
            height: 100%;
        }

        .quiz-list-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 14px 35px rgba(13, 63, 209, 0.18);
            border-color: #0d6efd;
            background: #ffffff;
        }

        .quiz-meta {
            font-size: 0.85rem;
            color: #6b7c8a;
            display: flex;
            gap: 1rem;
        }

        .quiz-difficulty-badge {
            font-size: 0.75rem;
            padding: 0.2rem 0.6rem;
            border-radius: 999px;
            background: rgba(255, 255, 255, 0.8);
        }

        .quiz-level-easy {
            border: 1px solid #d1e7dd;
        }

        .quiz-level-medium {
            border: 1px solid #ffeeba;
        }

        .quiz-level-hard {
            border: 1px solid #f5c2c7;
        }
    </style>
{% endblock %}




