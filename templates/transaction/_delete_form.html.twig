<form method="post" action="{{ path('app_transaction_delete', {'id': transaction.id}) }}" onsubmit="return confirm('Are you sure you want to delete this transaction?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.id) }}">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
        <div>
            <h6 class="mb-1 text-danger"><i class="fas fa-triangle-exclamation me-2"></i>Danger zone</h6>
            <small class="text-muted">This action is permanent and cannot be undone.</small>
        </div>
        <button class="btn btn-outline-danger">
            <i class="fas fa-trash me-2"></i>Delete transaction
        </button>
    </div>
</form>
