{{ form_start(form, {'attr': {'class': 'transaction-form'}}) }}
    <div class="row g-3">
        <div class="col-md-6">
            {{ form_row(form.user, {
                'attr': {'class': 'form-select'},
                'label_attr': {'class': 'form-label fw-semibold'}
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.type, {
                'attr': {'class': 'form-select'},
                'label_attr': {'class': 'form-label fw-semibold'}
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.montant, {
                'attr': {'class': 'form-control', 'placeholder': '0.00'},
                'label_attr': {'class': 'form-label fw-semibold'}
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.date, {
                'attr': {'class': 'form-control'},
                'label_attr': {'class': 'form-label fw-semibold'}
            }) }}
        </div>
        <div class="col-12">
            {{ form_row(form.description, {
                'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Optional details...'},
                'label_attr': {'class': 'form-label fw-semibold'}
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.moduleSource, {
                'attr': {'class': 'form-control', 'placeholder': 'Example: SAVINGS'},
                'label_attr': {'class': 'form-label fw-semibold'}
            }) }}
        </div>
    </div>

    <div class="d-flex align-items-center justify-content-between border-top pt-3 mt-4">
        <small class="text-muted">Verify amount, date and source before saving.</small>
        <button type="submit" class="btn btn-primary px-4">
            <i class="fas fa-save me-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
