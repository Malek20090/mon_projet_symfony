{% extends 'admin/layout.html.twig' %}

{% block title %}Transactions | Decide${% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Transactions</h1>
            <p class="mb-0">History of financial movements (income, expenses, savings)</p>
        </div>
        <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouvelle transaction
        </a>
    </div>

    <div class="card-custom mb-3">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" for="type">Type</label>
                <select id="type" name="type" class="form-select">
                    <option value="">Tous</option>
                    <option value="SAVING">Savings</option>
                    <option value="EXPENSE">Expense</option>
                    <option value="REVENUE">Revenu</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label" for="from">Du</label>
                <input type="date" id="from" name="from" class="form-control">
            </div>
            <div class="col-md-3">
                <label class="form-label" for="to">Au</label>
                <input type="date" id="to" name="to" class="form-control">
            </div>
            <div class="col-auto">
                <button class="btn btn-primary"><i class="fas fa-filter me-1"></i>Filtrer</button>
            </div>
        </form>
    </div>

    <div class="card-custom">
        {% if transactions|length > 0 %}
            <div class="table-responsive">
                <table class="table table-custom table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Montant</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Utilisateur</th>
                            <th style="width: 160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for transaction in transactions %}
                            <tr>
                                <td>{{ transaction.id }}</td>
                                <td>{{ transaction.type }}</td>
                                <td class="text-primary fw-bold">{{ transaction.montant }} TND</td>
                                <td>{{ transaction.date ? transaction.date|date('d/m/Y') : '' }}</td>
                                <td>{{ transaction.description }}</td>
                                <td>{{ transaction.user ? transaction.user.nom : '-' }}</td>
                                <td>
                                    <a href="{{ path('app_transaction_edit', {id: transaction.id}) }}" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_transaction_delete', {id: transaction.id}) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('Delete cette transaction ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.id) }}">
                                        <button class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center text-muted py-4">
                <i class="fas fa-file-invoice-dollar fa-3x mb-3"></i>
                <p class="mb-2">No transactions found.</p>
                <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create a first transaction
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}



