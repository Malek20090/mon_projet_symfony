{% extends 'admin/layout.html.twig' %}

{% block content %}

<h1>Transactions</h1>

<!-- FILTRES -->
<div class="card">
    <select>
        <option>All types</option>
        <option>EPARGNE</option>
        <option>DEPENSE</option>
    </select>

    <input type="date">
    <input type="date">
</div>

<!-- FORM CREATE -->
<div class="card">
    <h3>Create New Transaction</h3>

    {{ form_start(form) }}
    <div class="form-row">
        {{ form_widget(form.type) }}
        {{ form_widget(form.montant) }}
        {{ form_widget(form.date) }}
        {{ form_widget(form.description) }}
        {{ form_widget(form.user) }}
        <button class="btn-primary">Add</button>
    </div>
    {{ form_end(form) }}
</div>

<!-- TABLE EN BAS -->
<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Description</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.type }}</td>
                <td>{{ transaction.montant }} DT</td>
                <td>{{ transaction.date|date('Y-m-d') }}</td>
                <td>{{ transaction.description }}</td>
                <td>{{ transaction.user.nom }}</td>
                <td>
                    <a href="{{ path('app_transaction_edit', {id: transaction.id}) }}" class="btn-edit">Edit</a>
                    <form method="post"
                          action="{{ path('app_transaction_delete', {id: transaction.id}) }}"
                          style="display:inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.id) }}">
                        <button class="btn-delete">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No transactions found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transaction_new') }}">Create new</a>
</div>

{% endblock %}
