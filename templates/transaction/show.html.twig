{% extends 'admin/layout.html.twig' %}

{% block title %}Detail transaction | Decide${% endblock %}

{% block content %}
<div class="admin-page">
    <div class="page-header-card">
        <div>
            <h1>Transaction #{{ transaction.id }}</h1>
            <p class="mb-0">Details complets de la transaction</p>
        </div>
        <div>
            <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}" class="btn btn-primary me-2">
                <i class="fas fa-edit me-1"></i>Edit
            </a>
            <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to list
            </a>
        </div>
    </div>

    <div class="card-custom mb-3">
        <table class="table mb-0">
            <tbody>
                <tr>
                    <th style="width: 220px;">ID</th>
                    <td>{{ transaction.id }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ transaction.type }}</td>
                </tr>
                <tr>
                    <th>Montant</th>
                    <td class="text-primary fw-bold">{{ transaction.montant }} TND</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ transaction.date ? transaction.date|date('d/m/Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ transaction.description }}</td>
                </tr>
                <tr>
                    <th>Module source</th>
                    <td>{{ transaction.moduleSource }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="card-custom">
        {{ include('transaction/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

