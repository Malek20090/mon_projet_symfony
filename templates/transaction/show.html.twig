{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ transaction.type }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ transaction.montant }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ transaction.description }}</td>
            </tr>
            <tr>
                <th>ModuleSource</th>
                <td>{{ transaction.moduleSource }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_transaction_index') }}">back to list</a>

    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% extends 'admin/layout.html.twig' %}

{% block content %}

<h1>Transactions</h1>

<!-- ðŸ”Ž FILTRES -->
<form method="get" class="filter-bar">
    <select name="type">
        <option value="">All types</option>
        <option value="SAVING">Saving</option>
        <option value="EXPENSE">Expense</option>
        <option value="INVESTMENT">Investment</option>
    </select>

    <input type="date" name="from">
    <input type="date" name="to">

    <button>Filter</button>
</form>

<!-- âž• CREATE -->
<div class="card">
    <h3>Create New Transaction</h3>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn-primary">Add</button>
    {{ form_end(form) }}
</div>

<!-- ðŸ“‹ TABLE -->
<div class="card">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
    {% for t in transactions %}
        <tr>
            <td>{{ t.id }}</td>
            <td>{{ t.user.nom }}</td>
            <td>{{ t.type }}</td>
            <td>{{ t.montant }} DT</td>
            <td>{{ t.date|date('Y-m-d') }}</td>
            <td>{{ t.description }}</td>
        </tr>
    {% else %}
        <tr><td colspan="6">No transactions</td></tr>
    {% endfor %}
    </tbody>
</table>
</div>

{% endblock %}
